<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="activitytest.example.com.thefatlock.MainActivity">


    <ImageButton
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:src="@drawable/record"
        android:id="@+id/records"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:src="@drawable/me"
        android:id="@+id/me"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:src="@drawable/community"
        android:id="@+id/imageButton3"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/me"
        android:layout_toStartOf="@+id/me" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:src="@drawable/plus"
        android:id="@+id/imageButton1"
        android:layout_toLeftOf="@+id/imageButton3"
        android:layout_toStartOf="@+id/imageButton3"
        android:layout_alignParentBottom="true" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:src="@drawable/message"
        android:id="@+id/imageButton5"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/records"
        android:layout_toStartOf="@+id/imageButton1" />

    <ImageButton
        android:layout_width="190dp"
        android:layout_height="250dp"
        android:src="@drawable/dailyweight"
        android:id="@+id/theweight"
        android:layout_above="@+id/imageButton1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="190dp"
        android:layout_height="270dp"
        android:src="@drawable/dailydiet"
        android:id="@+id/thediet"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="190dp"
        android:layout_height="270dp"
        android:src="@drawable/thelocker"
        android:id="@+id/thelocker"
        android:contentDescription=""
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="190dp"
        android:layout_height="250dp"
        android:src="@drawable/dailysports"
        android:id="@+id/theexercise"
        android:layout_below="@+id/thediet"
        android:layout_alignParentStart="true" />

</RelativeLayout>
