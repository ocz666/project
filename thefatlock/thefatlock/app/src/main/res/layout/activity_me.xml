<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_me"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="activitytest.example.com.thefatlock.me">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:rowCount="3"
        android:columnCount="3"
        android:layout_marginTop="230dp">

        <ImageButton
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/myhealthreport"
            android:id="@+id/myhealthreport"
            android:layout_width="130dp"
            android:layout_height="121dp" />

        <ImageButton
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/mysoftware"
            android:id="@+id/mysoftware"
            android:layout_width="127dp"
            android:layout_height="121dp" />
        <ImageButton
            android:layout_row="0"
            android:layout_column="2"
            android:src="@drawable/mygoal"
            android:id="@+id/mygoal"
            android:layout_width="124dp"
            android:layout_height="121dp" />
        <ImageButton
            android:layout_row="1"
            android:layout_column="0"
            android:src="@drawable/mydiet"
            android:id="@+id/mydiet"
            android:layout_width="128dp" />
        <ImageButton
            android:layout_row="1"
            android:layout_column="1"
            android:src="@drawable/mysportrecord"
            android:id="@+id/mysportrecord"
            android:layout_height="109dp" />
        <ImageButton
            android:layout_row="1"
            android:layout_column="2"
            android:src="@drawable/myweight"
            android:id="@+id/myweight"
            android:layout_width="wrap_content"
            android:layout_height="109dp" />
        <ImageButton
            android:layout_row="2"
            android:layout_column="0"
            android:src="@drawable/mycollections"
            android:id="@+id/mycollections"
            android:layout_width="124dp"
            android:layout_height="126dp" />

    </GridLayout>

    <ImageView
        android:src="@drawable/userframeimage"
        android:id="@+id/userframeimage"
        android:layout_width="420dp"
        android:layout_height="230dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
