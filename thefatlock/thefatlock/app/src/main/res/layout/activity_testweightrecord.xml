<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_testweightrecord"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="activitytest.example.com.thefatlock.testweightrecord">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="73dp"
        android:layout_marginTop="75dp"
        android:id="@+id/editText3"
        android:singleLine="true"
        android:selectAllOnFocus="true"
        android:text="请输入年份" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_below="@+id/editText4"
        android:layout_alignEnd="@+id/editText4"
        android:layout_marginTop="35dp"
        android:id="@+id/editText5"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:text="请输入日期" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/editText5"
        android:layout_marginBottom="105dp"
        android:id="@+id/editText6"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:text="请诚实地录入体重（kg）" />

    <TextView
        android:text="年"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/year"
        android:layout_alignBaseline="@+id/editText3"
        android:layout_alignBottom="@+id/editText3"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="月"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/month"
        android:layout_alignBaseline="@+id/editText4"
        android:layout_alignBottom="@+id/editText4"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="日"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/editText5"
        android:layout_alignEnd="@+id/month"
        android:layout_marginTop="9dp"
        android:id="@+id/day" />

    <TextView
        android:text="体重"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/editText6"
        android:layout_alignEnd="@+id/day"
        android:id="@+id/weight"
        android:layout_alignParentStart="true" />

    <Button
        android:text="保存"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weight"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:id="@+id/save" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="35dp"
        android:id="@+id/editText4"
        android:singleLine="true"
        android:selectAllOnFocus="true"
        android:text="请输入月份"
        android:layout_below="@+id/editText3"
        android:layout_alignStart="@+id/editText3" />
</RelativeLayout>
